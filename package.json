{
  "name": "component-library",
  "version": "1.0.0",
  "description": "Component Library",
  "main": "index.js",
  "scripts": {
    "copy:all": "npm run copy:package && npm run copy:build",
    "copy:package": "gulp copy:package",
    "copy:build": "gulp copy:build",
    "clean": "gulp clean",
    "compile": "ngc -p src/lib/tsconfig-build.json",
    "bundle": "rollup -c rollup.config.umd.js && rollup -c rollup.config.esm.js",
    "build": "npm run clean && npm run bundle && tsc && npm run compile && npm run copy:all",
    "testapp:serve": "npm run build && cd ./test_apps/testApp && ng serve --open",
    "publish": "cd ./dist && npm publish"
  },
  "author": "Robert Broden",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "^5.1.2",
    "@angular/compiler": "^5.1.2",
    "@angular/core": "^5.1.2",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^5.1.2",
    "clean-css": "^4.1.9",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-clean-css": "^3.9.0",
    "gulp-cli": "^2.0.0",
    "gulp-connect": "^5.0.0",
    "gulp-conventional-changelog": "^1.1.7",
    "gulp-flatten": "^0.3.1",
    "gulp-htmlmin": "^4.0.0",
    "gulp-if": "^2.0.2",
    "gulp-rename": "^1.2.2",
    "gulp-rollup": "^2.15.0",
    "gulp-sass": "^3.1.0",
    "gulp-transform": "^3.0.5",
    "gulp-util": "^3.0.8",
    "html-minifier": "^3.5.7",
    "node-sass": "^4.7.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.3",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-angular": "^0.5.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "run-sequence": "^2.2.0",
